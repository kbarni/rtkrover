# Systemd service for RTKRover
# Copy this file to /etc/systemd/system/ and run systemctl enable rtkrover

[Unit]
Description=RTKRover service
After=network.target
#StartLimitIntervalSec=0
[Service]
Type=simple
Restart=on-failure
RestartSec=1
#User=pi
ExecStart=/usr/local/bin/rtkrover /etc/rtkrover.ini
# Wait a few seconds to initialize the serial ports
ExecStartPre=/usr/bin/sleep 5

[Install]
WantedBy=multi-user.target
